        <% if (user.validEmail) { %>
          <ul>
            <li><a href="/dashboard/<%= orgId %>/events">List events</a></li>
            <li><a href="/dashboard/<%= orgId %>/settings">Settings</a></li>
            <li><a href="/dashboard/<%= orgId %>/event">Create Event</a></li>
